pipeline {
    agent {
        docker {
            image 'python-test-image'  
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Test') {
            steps {
                script {
                    try {
                        sh 'python3 -m unittest discover'  // Utilise python3 pour ex√©cuter les tests
                    } catch (Exception e) {
                        echo "Tests failed: ${e}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Tests passed. Merging dev into master.'
            sh '''
                git checkout master
                git merge --ff-only dev
                git push origin master
            '''
        }
        failure {
            echo 'Tests failed. Moving commit to failures branch.'
            sh '''
                git checkout dev
                git reset HEAD~1 --hard
                git checkout -b failures/${BUILD_NUMBER}
                git push origin failures/${BUILD_NUMBER}
            '''
        }
    }
}
